package components

templ Base(title string) {
  <!DOCTYPE html>
  <html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>{ title }</title>
  </head>
  <body class={flex(), textColor()} style="background-color: rgb(43, 42, 42)">
    <div class={flex(), col(), sleeve()}>
      @Greeting()
      @Content()
      @Footer()
    </div>
  </body>
  </html>
}

